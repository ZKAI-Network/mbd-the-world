{
    "name": "'mbd The World - Your Personal AI Recommender",
    "action": {
      "default_popup": "./html/popup.html"
    },
    "manifest_version": 3,
    "version": "0.0.1",
    "description": "explore web3",
    "permissions": [
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://twitter.com/",
      "https://youtube.com/",
      "https://stackoverflow.com/",
      "https://www.youtube.com/",
      "https://medium.com/",
      "https://www.linkedin.com/"
    ],
    "externally_connectable": {
      "matches": ["https://twitter.com/*", "https://youtube.com/*", "https://www.youtube.com/*", "https://stackoverflow.com/*", "https://medium.com/*", "https://www.linkedin.com/*"]
    },
    "icons": {
        "32": "images/mbd_logo_favicon.png"
    },
    "background": {
      "service_worker": "lib/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["images/mbd_logo.png"],
            "matches": ["https://twitter.com/*", "https://youtube.com/*", "https://www.youtube.com/*", "https://stackoverflow.com/*", "https://medium.com/*", "https://www.linkedin.com/*"]
        }
    ]
  }